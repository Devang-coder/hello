{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.8",
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "templates/**",
          "static/**",
          "dysgraphia_model.tflite",
          "api/requirements.txt",
          "app.py"
        ]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/predict",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/",
      "dest": "app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    }
  ]
}
